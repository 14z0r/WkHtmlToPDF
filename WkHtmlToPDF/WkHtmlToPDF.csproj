<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>CoreHtmlToPdf</Title>
    <PackageProjectUrl>https://github.com/14z0r/CoreHtmlToPDF</PackageProjectUrl>
    <RepositoryUrl>https://github.com/14z0r/CoreHtmlToPDF</RepositoryUrl>
	 <Authors>Timo Bachmann</Authors>
	 <PackageLicenseExpression>MIT</PackageLicenseExpression>
	 <PackageReadmeFile>nuget_readme.md</PackageReadmeFile>
	 <AssemblyName>WkHtmlToPDF</AssemblyName>
	 <RootNamespace>WkHtmlToPDF</RootNamespace>
  </PropertyGroup>
	<ItemGroup>
		<EmbeddedResource Include="wkhtmltopdf.exe">
			<IncludeInPackage>true</IncludeInPackage>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</EmbeddedResource>
	</ItemGroup>
	<ItemGroup>
	  <None Include="..\nuget_readme.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>
</Project>
